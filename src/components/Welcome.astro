---
import Image from "astro/components/Image.astro";
import Statue from "@/assets/statue.png";
import Linkedin from "@/assets/linkedin.svg";
import GitHub from "@/assets/github.svg";
import Gmail from "@/assets/gmail.svg";
---

<section
	class="max-w-screen-lg flex items-center mx-auto px-4 lg:px-6 w-full h-full font-permanent text-xl gap-9"
>
	<div class="flex-1 flex flex-col gap-10">
		<div class="text-secondary uppercase text-6xl">Lu Phi Hung</div>
		<div class="w-full flex gap-9 items-center">
			<hr
				class="flex-1 w-full h-[1px] bg-primary rounded-full animate-scale-x-o origin-left"
				aria-hidden="true"
			/>

			<figure class="flex items-center gap-6">
				<Image alt="Statue 1" src={Linkedin} class="w-6 h-6" />
				<Image alt="Statue 2" src={GitHub} class="w-7 h-7" />
				<Image alt="Statue 3" src={Gmail} class="w-6 h-6" />
			</figure>

			<hr
				class="flex-1 w-full h-[1px] bg-primary rounded-full animate-scale-x-o origin-right"
				aria-hidden="true"
			/>
		</div>
	</div>

	<Image alt="Primary statue displayed" src={Statue} class="w-1/3" />
</section>
